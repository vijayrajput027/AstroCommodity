<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_720x1280">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="40dp"
            android:gravity="center_horizontal" >
            <TextView
                android:id="@+id/txtheader"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Mohan Astrological &amp; Vastu Research Center"/>
            <EditText
                android:id="@+id/editusername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/edt_text_bg"
                android:padding="5dp"
                android:textColorHint="@android:color/white"
                android:textColor="@color/white"
                android:hint="Email Id"/>
            <EditText
                android:id="@+id/editpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:background="@drawable/edt_text_bg"
                android:textColorHint="@android:color/white"
                android:padding="5dp"
                android:textColor="@color/white"
                android:inputType="textPassword"
                android:hint="Password"/>
            <Button
                android:id="@+id/btnlogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Login"
                android:background="@drawable/login_btn"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/textforgetpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Forget Your Password?"/>
            <View
                android:id="@+id/viewline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:id="@+id/textaccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Don't have an account?"/>
                <TextView
                    android:id="@+id/textjoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/textaccount"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Join Now"/>
            </RelativeLayout>
            <Button
                android:id="@+id/btnjoin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:background="@drawable/small_btn_bg"
                android:text="Join Now"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
